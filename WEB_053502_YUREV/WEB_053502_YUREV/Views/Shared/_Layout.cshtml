<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WEB_053502_YUREV</title>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WEB_053502_YUREV.styles.css" asp-append-version="true"/>
</head>
    <body>
        <header>
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-dark bg-grey">
                    <a class="navbar-brand" href="#">WebLabsV06</a>
                    <div class="navbar-nav">
                        @await Component.InvokeAsync("Menu")
                    </div>
                    <partial name="_UserPartial" />
                </nav> <!-- Панель навигации - конец -->
            </div><!-- container - конец -->
        </header><!-- header - конец -->
    <main class="container-fluid" style="min-height: 84vh">
        @RenderBody()
    </main>
        <footer>
            <div class="container">
                <div class="navbar navbar-dark navbar-expand-md bg-grey">
                    <div class="navbar-nav ms-auto">
                        <a class="nav-item nav-link" href="http://www.facebook.com">
                            <i class="fab fa-facebook-f fa-2x"></i>
                        </a>
                        <a class="nav-item nav-link" href="http://www.vk.com">
                            <i class="fab fa-vk fa-2x"></i>
                        </a>
                        <a class="nav-item nav-link" href="http://www.twitter.com">
                            <i class="fab fa-twitter fa-2x"></i>
                        </a> </div>
                </div>
            </div>
        </footer>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>